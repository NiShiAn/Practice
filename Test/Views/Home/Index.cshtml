    ViewBag.Title = "Index";
}

<h2>列表行移动</h2>

<table class="table" id="mytable">
    <tr class="active">
        <th>编号</th>
        <th>姓名</th>
        <th>性别</th>
        <th>毕业学校</th>
        <th>专业</th>
        <th>操作</th>
    </tr>
    <tr>
