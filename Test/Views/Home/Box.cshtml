
@{
    ViewBag.Title = "隐藏标签";
}

<style>
    .box1 {
        height: 180px;
        box-sizing: border-box;
        border: solid 1px #e9e9e9;
        padding: 14px;
        width: 308px;
        margin-right: 14px;
        margin-bottom: 14px;
        position: relative;
        overflow: hidden;
    }
    .bar1 {
        display: flex;
        display: -webkit-flex;
        width: 100%;
        height: 30px;
        left: 0;
        line-height: 30px;
        position: absolute;
        bottom: -30px;
        background-color: rgba(0, 0, 0, 0.4);
        cursor: pointer;
    }
    .bar1 > span {
        flex: 1;
        -webkit-flex: 1;
        color: #fff;
        text-align: center;
        font-size: 14px;
        position: relative;
    }
    .bar1 > span:after {
        position: absolute;
        top: 5px;
        bottom: 5px;
        height: 20px;
        width: 1px;
        background-color: #a9a9a9;
        content: '';
        right: 0;
    }
    .box1:hover .bar1 {
        bottom: 0;
    }
    .bar1 > span:last-child:after {
        display: none;
    }
</style>
